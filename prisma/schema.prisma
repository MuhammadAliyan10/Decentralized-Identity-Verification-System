generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model DecentralizedUser {
  id String @id 
  username String @unique
  displayName String
  email String? @unique
  passwordHash String?
  avatarURL String?
  createdAt  DateTime  @default(now())
  sessions Session[]
  @@map("users")
}
model Session {
  id String @id
  userId String
  expireAt DateTime 
  user DecentralizedUser @relation(fields: [userId],references: [id], onDelete: Cascade)
  @@map("sessions")
}